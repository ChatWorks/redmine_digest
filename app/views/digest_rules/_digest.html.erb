<h1 style="color: #555; font-family: 'Trebuchet MS', Verdana, sans-serif; padding: 2px 10px 1px 0; margin: 0 0 10px 0; font-size: 2em;">
  <%= digest.name %>
</h1>

<h2 style="color: #555; font-family: 'Trebuchet MS', Verdana, sans-serif; padding: 2px 10px 1px 0; margin: 0 0 10px 0; font-size: 1.4em;">
  <%= t :text_digest,
          :recurrent => t(digest.recurrent, :scope => 'recurrent_types'),
          :time_from => format_date(digest.time_from),
          :time_to => format_date(digest.time_to) %>
</h2>

<% if digest.projects_count == 1 %>
  <h3 style="color: #555; font-family: 'Trebuchet MS', Verdana, sans-serif; padding: 2px 10px 1px 0; margin: 0 0 10px 0; font-size: 1.2em;">
    <%= "#{l(:field_project)}: #{digest.project_names.first}" %>
  </h3>
<% end %>

<h2 style="color: #555; font-family: 'Trebuchet MS', Verdana, sans-serif; padding: 2px 10px 1px 0; margin: 20px 0 3px 20px; font-size: 1.4em;">
  <%= l(:text_new_issues) %>
</h2>
<div style="margin: 0 0 0 20px; white-space: nowrap;">
  <% digest.sorted_digest_issues.each do |status, digest_issues| %>
    <% new_digest_issues = digest_issues.find_all { |i| i.new_issue? } %>
    <% next if new_digest_issues.empty? %>
    <div style="display: inline-block; margin:0; width:8em; border-top: 2px solid #cecece; font-size: 1.2em; vertical-align: top;">
        <%=	status %>
    </div>
    <div style="display: inline-block; margin:0; width:80%; border-top: 2px solid #cecece; vertical-align: top;">
      <%= render 'digest_issues',
                 :digest => digest,
                 :digest_issues => new_digest_issues %>
    </div>
    <div style="clear:both"></div>
<% end %>
</div>

<h2 style="color: #555; font-family: 'Trebuchet MS', Verdana, sans-serif; padding: 2px 10px 1px 0; margin: 20px 0 3px 20px; font-size: 1.4em;">
  <%= l(:text_changed_issues) %>
</h2>
<div style="margin: 0 0 0 20px; white-space: nowrap;">
  <% digest.sorted_digest_issues.each do |status, digest_issues| %>
    <% new_digest_issues = digest_issues.find_all { |i| !i.new_issue? } %>
    <% next if new_digest_issues.empty? %>
    <div style="display: inline-block; margin:0; width:8em; border-top: 2px solid #cecece; font-size: 1.2em; vertical-align: top;">
        <%=	status %>
    </div>
    <div style="display: inline-block; margin:0; width:80%; border-top: 2px solid #cecece; vertical-align: top;">
      <%= render 'digest_issues',
                 :digest => digest,
                 :digest_issues => new_digest_issues %>
    </div>
    <div style="clear:both"></div>
<% end %>
</div>
