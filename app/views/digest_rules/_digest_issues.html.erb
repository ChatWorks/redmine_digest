<h2 style="color: #555; padding: 2px 10px 1px 0; margin: 20px 0 3px 20px;">
  <%= collection_label %>
</h2>
<div style="margin: 0 0 0 20px; white-space: nowrap;">
  <% digest.sorted_digest_issues.each do |status, digest_issues| %>

    <% filtered_digest_issues = digest_issues.find_all { |i| collection_filter.call(i) } %>

    <% next if filtered_digest_issues.empty? %>
    <div style="display: inline-block; margin: 10px 0 0 0; width:8em; border-top: 2px solid #cecece; font-size: 1.2em; vertical-align: top; padding-top: 10px;">
      <%=	status -%></div><div style="display: inline-block; margin: 10px 0 0 0; width:80%; border-top: 2px solid #cecece; vertical-align: top;">
      <table border="0" style="font-size: 8pt">
        <% filtered_digest_issues.each do |d_issue| %>
          <%=	render 'digest_issue', :digest => digest, :d_issue => d_issue %>
        <% end %>
      </table>
    </div>
    <div style="clear:both"></div>
  <% end %>
</div>
