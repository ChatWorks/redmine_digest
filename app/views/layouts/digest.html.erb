<html>
<head>
  <style>
    body {
      font-family: Verdana, sans-serif;
      font-size: 0.8em;
    }
    h1, h2, h3, h4 {
      color: #555;
      font-family: "Trebuchet MS", Verdana, sans-serif;
      padding: 2px 10px 1px 0;
      margin: 0 0 10px 0;
    }
    h1 {
      font-size: 2em;
    }
    h2 {
      font-size: 1.4em;
    }
    h3 {
      font-size: 1.2em;
    }
    h4 {
      font-size: 1em;
    }
    ul {
      list-style-type: none;
      padding-left: 20px;
    }
    a, a:link, a:visited {
      color: #10152c;
      text-decoration: none;
    }
    a:hover, a:active {
      color: #c61a1a; text-decoration: underline;
    }
    hr {
      width: 100%;
      height: 1px;
      background: #ccc;
      border: 0;
    }
    .footer {
      font-size: 0.8em;
      font-style: italic;
    }
    .sign {
      font-size: smaller;
      font-weight: bold;
      width: 1em;
      float: left;
      color: green;
    }
    .events {
      padding-left: 60px;
      margin-top: 1px;
      margin-bottom: 5px;
      font-size: smaller;
      opacity: 0.8;
    }
    .event {
      margin-left: 3px;
    }
    .status_changed {
      background-color: #defff1;
    }
    .percent_changed {
      background-color: #d8d8ff;
    }
    .assignee_changed {
      background-color: #fbe3ff;
    }
    .version_changed {
      background-color: #ffe1e3;
    }
    .project_changed {
      background-color: #fffcde;
    }
    .comment_added {
      background-color: #e0ffe1;
    }
    .issue_created {
      background-color: #e1ffe3;
    }
  </style>
</head>
<body>
  <span class="header"><%= Redmine::WikiFormatting.to_html(Setting.text_formatting, Setting.emails_header).html_safe %></span>
  <%= yield %>
  <hr />
  <span class="footer"><%= Redmine::WikiFormatting.to_html(Setting.text_formatting, Setting.emails_footer).html_safe %></span>
</body>
</html>
